        <item name="colorSurfaceContainerHigh">@color/surfaceContainerHigh</item>
        <item name="colorSurfaceContainerHighest">@color/surfaceContainerHighest</item>

        <!-- Status bar customization -->
        <item name="android:statusBarColor">@color/toolbar</item>

        <!-- For API level 23+ (Marshmallow) -->
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>

        <!-- For edge-to-edge display -->
        <item name="android:windowLightNavigationBar">true</item>

    </style>



    <!-- Splash Screen Theme -->
    <style name="App.Starting.Theme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Android 12+ Splash Screen API attributes -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/chatz</item>

        <!-- Pre-Android 12 Splash Screen attributes -->
        <item name="android:windowSplashScreenBackground" tools:targetApi="31">#FFFFFF</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="31">@mipmap/chatz</item>

        <!-- Specify the theme to use after splash screen -->
        <item name="postSplashScreenTheme">@style/Theme.Chatz</item>
    </style>
</resources>